{
    "name": "url-shortener",
    "version": "0.0.1",
    "description": "API to shorten long url",
    "author": "",
    "private": true,
    "license": "MIT",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --testRegex=.e2e-spec.ts$",
        "test:int": "jest --testRegex=.int.spec.ts$",
        "lint-staged": "lint-staged",
        "doc:swagger": "WAIT_FOR_DESTROY=false ts-node ./docs/swagger.ts"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "npm run format",
            "npm run lint"
        ]
    },
    "dependencies": {
        "@nestjs/cli": "^10.3.2",
        "@nestjs/common": "^10.0.0",
        "@nestjs/config": "^3.2.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/mongoose": "^10.0.4",
        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/platform-fastify": "^10.3.5",
        "@nestjs/swagger": "^7.3.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "joi": "^17.12.2",
        "nest-winston": "^1.9.4",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "short-unique-id": "^5.0.3",
        "winston": "^3.12.0"
    },
    "devDependencies": {
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@types/jest": "^29.5.2",
        "@types/mongodb": "^4.0.7",
        "@types/node": "^20.3.1",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.5.0",
        "lint-staged": "^15.2.2",
        "mongodb-memory-server": "^9.1.7",
        "prettier": "^3.0.0",
        "source-map-support": "^0.5.21",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.3"
    }
}
